@model AddUserViewModel

<head>
    <link rel="stylesheet" href="~/css/addBoat.css" />
</head>

<form method="post" class="addboatBody">
    <div style="display: none">
        @Html.ValidationSummary()
    </div>
    <div class="center">
        <h3>Please fill in the form</h3>
        <div class="addBoatFormBody">
            @Html.ValidationMessage("name","", new { @class = "text-danger"})
            <p>
                <label asp-for="UserName">Name </label>
                <input asp-for="UserName" type="text" placeholder="Username" class="input" />
            </p>
            <p>
                <label asp-for="IsAdmin">IsAdmin</label>
                <input asp-for="IsAdmin" type="checkbox" class="input" />
            </p>
            @Html.ValidationMessage("certificates","", new { @class = "text-danger"})
            <p>
                <label asp-for="Certificates">Certificates</label>
                <input asp-for="Certificates" type="text" class="input" placeholder="seperate by ','" oninput="this.value = this.value.toUpperCase()" />
            </p>
        </div>
        <input type="submit" value="Add user" />
    </div>
</form>