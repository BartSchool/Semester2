@model TrendViewModel
@{
    ViewData["Title"] = "Trend";
}

<div class="container">
    <div class="col-12">
        <div class="row justify-content-center">
            <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12">
                <form asp-action="SaveTrendResult" method="post">

                   <div>
                        <input type="radio" id="trendUp" name="trendIndicator" value="1" hidden/>
                        <label for="trendUp" id="trendUpArrow">
                            <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                                 viewBox="0 0 330 330" style="enable-background:new 0 0 330 330;" xml:space="preserve">
                            <path id="XMLID_27_" d="M15,180h263.787l-49.394,49.394c-5.858,5.857-5.858,15.355,0,21.213C232.322,253.535,236.161,255,240,255
                                s7.678-1.465,10.606-4.394l75-75c5.858-5.857,5.858-15.355,0-21.213l-75-75c-5.857-5.857-15.355-5.857-21.213,0
                                c-5.858,5.857-5.858,15.355,0,21.213L278.787,150H15c-8.284,0-15,6.716-15,15S6.716,180,15,180z" />
                           </svg>
                        </label>
                    </div>

                   <div>
                        <input type="radio" id="trendEqual" name="trendIndicator" value="2" hidden/>
                        <label for="trendEqual" id="trendEqualArrow">
                            <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                                 viewBox="0 0 330 330" style="enable-background:new 0 0 330 330;" xml:space="preserve">
                            <path id="XMLID_27_" d="M15,180h263.787l-49.394,49.394c-5.858,5.857-5.858,15.355,0,21.213C232.322,253.535,236.161,255,240,255
                                s7.678-1.465,10.606-4.394l75-75c5.858-5.857,5.858-15.355,0-21.213l-75-75c-5.857-5.857-15.355-5.857-21.213,0
                                c-5.858,5.857-5.858,15.355,0,21.213L278.787,150H15c-8.284,0-15,6.716-15,15S6.716,180,15,180z" />
                           </svg>
                        </label>
                    </div>

                   <div>
                        <input type="radio" id="trendDown" name="trendIndicator" value="3" hidden/>
                        <label for="trendDown" id="trendDownArrow">
                            <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                                 viewBox="0 0 330 330" style="enable-background:new 0 0 330 330;" xml:space="preserve">
                            <path id="XMLID_27_" d="M15,180h263.787l-49.394,49.394c-5.858,5.857-5.858,15.355,0,21.213C232.322,253.535,236.161,255,240,255
                                s7.678-1.465,10.606-4.394l75-75c5.858-5.857,5.858-15.355,0-21.213l-75-75c-5.857-5.857-15.355-5.857-21.213,0
                                c-5.858,5.857-5.858,15.355,0,21.213L278.787,150H15c-8.284,0-15,6.716-15,15S6.716,180,15,180z" />
                           </svg>
                        </label>
                    </div>

                   <input type="submit" value="Normal state test" />
                </form>
            </div>
        </div>
    </div>
</div>
<style>
     svg{
         width: 100px;
     }
     #trendUpArrow {
         transform-origin: left center;
         transform: rotate(-45deg);
    }

    #trendDownArrow {
        transform-origin: left center;
        transform: rotate(45deg);
    }

     #trendUp:checked + label svg {
         fill: green;
     }
     #trendEqual:checked + label svg {
         fill: yellow;
     }
     #trendDown:checked + label svg {
         fill: red;
     }
</style>